package edu.mission;

import java.util.Scanner;
public class Test2 {

	public static void main(String[] args) {
		System.out.print("상품 가격을 입력하세요 : ");
		Scanner sc = new Scanner(System.in);
		int price =  sc.nextInt();
		
		int a = price / 50000;
		price -= a * 50000;
		int b = price / 10000;
		price -= b * 10000;
		int c = price / 5000;
		price -= c * 5000;
		int d = price / 1000;
		price -= d * 1000;
		
		System.out.println("5만원 : " + a);
		System.out.println("1만원 : " + b);
		System.out.println("5천원 : " + c);
		System.out.println("1천원 : " + d);
		

	}

}
