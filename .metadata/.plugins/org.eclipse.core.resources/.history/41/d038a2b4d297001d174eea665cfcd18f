package edu.mission;

public class Test8 {
	public static void one() {
		for (int i = 2; i <= 9; i++) {
			for (int j = 1; j <= 9; j++) {
				System.out.println(i + " * " + j + " = " + i * j);
			}
			System.out.println();
		}
	}
	
	public static void two() {
		for (int i = 1; i <= 9; i++) {
			for (int j = 2; j <= 8; j *= 2) {
				for (int k = j; k <= k+1; k++) {
					System.out.println(i + " * " + j + " = " + i * j + "\t");
				}
				System.out.println();
			}
			System.out.println();
		}
	}
	public static void main(String[] args) {
		
		one();
		two();
		//three();
		
	
	
	}

}
